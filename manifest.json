{
  "manifest_version": 2,

  "name": "Simple Blocker",
  "description": "Block URL using regular expression",
  "version": "0.3.2",
  "author": "Ery Widyanto",

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["backgrounds/main.js"]
  },

  "options_ui": {
    "chrome_style": true,
    "page": "options/options.html"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  }

}
